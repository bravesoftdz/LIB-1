  Dialogs, StdCtrls;

type
  TfrmMain = class(TForm)
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmMain: TfrmMain;

implementation
uses uAccess;
{$R *.dfm}


procedure TfrmMain.Button1Click(Sender: TObject);
var
   msg: string;
begin
   if not CreateDB('c:\a.mdb',msg)  then
   begin
      showmessage(msg);
   end;
end;

end.
